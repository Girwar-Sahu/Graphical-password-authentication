<%- include('partials/head') %>
  <style>
    .badge {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: rgba(0, 0, 0, 0.5);
      color: #fff;
      border-radius: 50%;
      padding: 0px 5px 0px 5px;
      font-size: 15px;
    }
  </style>

  <body class="bg-gray-100">
    <div class=" my-5 mx-auto drop-shadow-lg flex items-center justify-center">
      <div class="w-full md:w-5/12 bg-white rounded-lg items-center">
        <h1
          class="text-3xl text-center mb-4 mt-2 font-semibold bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500">
          Register</h1>
        <hr class="border-gray-200"><br>
        <div class="px-10 pb-10">
          <div class="w-full mb-2">
            <label class="font-light text-sm" for="emailID">Enter Email</label><br>
            <input type="email" name="email" autocomplete="email" id="emailID" required placeholder="Email"
              class="px-8 w-full border rounded py-2 text-gray-700 focus:outline-none">
          </div>
          <div class="w-full mb-2">
            <label class="font-light text-sm" for="nameID">Enter Name</label><br>
            <input type="text" name="name" autocomplete="name"
              class="px-8 w-full border rounded py-2 text-gray-700 focus:outline-none" id="nameID" placeholder="Name">
          </div>
          <div class="w-full mb-2">
            <label class="font-light text-sm" for="numberID">Enter Phone Number</label><br>
            <input name="number" type="text" class="px-8 w-full border rounded py-2 text-gray-700 focus:outline-none"
              id="numberID" placeholder="Number">
          </div>
          <div class="w-full mb-5">
            <label class="font-light text-sm" for="select-catagory">Choose Password Catagory</label><br>
            <select id="select-catagory" name="catagory"
              class="px-8 w-full border rounded py-2 text-gray-700 focus:outline-none">
              <option class="font-light" value="" selected disabled>Select catagory</option>
              <% data.forEach((item)=>{ %>
                <option value="<%= item %>">
                  <%= item %>
                </option>
                <% }); %>
            </select>
          </div>
          <div id="image-container" class="p-3 bg-gray-100 grid grid-cols-3 sm:grid-cols-4 gap-4">

          </div>
          <button class="w-full mt-6 py-2 rounded bg-purple-700 text-gray-100 focus:outline-none">Sign In
          </button>
          <a href="/user/login" class="no-underline text-opacity-200 float-right mt-6 mb-4 hover:text-purple-700">
            login ->
          </a>
          <a href="/" class="no-underline text-opacity-200 float-left mt-6 mb-8 hover:text-purple-700">
            <- Home </a>
        </div>
      </div>
    </div>
  </body>

  <%- include('partials/foot') %>
